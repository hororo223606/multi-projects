<!DOCTYPE StreamControlLayout>
<layout width="600" height="400" tabbed="1">
 <toolBar>
  <label>Best of</label>
  <comboBox id="bestOf" width="50">
    <comboItem value="bo3">3</comboItem>
    <comboItem value="bo5">5</comboItem>
  </comboBox>
 </toolBar>
 <tab name="Match">
  <label x="10"  y="24" width="26" height="13">P1</label>
  <label x="10"  y="54" width="26" height="13">P2</label>

  <!-- ヘッダー -->
  <label x="40"  y="4" width="60" height="13">Team</label>
  <label x="150" y="4" width="60" height="13">Name</label>
  <label x="300" y="4" width="60" height="13">Twitter</label>
  <label x="420" y="4" width="60" height="13">Country</label>
  <label x="520" y="4" width="50" height="13">Score</label>

  <!-- Player 1 -->
  <lineEdit id="pTeam1"    x="40"  y="20" width="100" height="20" dataSet="players.csv"/>
  <lineEdit id="pName1"    x="150" y="20" width="140" height="20" dataSet="players.csv"/>
  <lineEdit id="pTwitter1" x="300" y="20" width="100" height="20" dataSet="players.csv" dataField="2" master="pName1"/>
  <lineEdit id="pCountry1" x="420" y="20" width="80"  height="20" dataSet="players.csv" dataField="3" master="pName1"/>
  <spinBox  id="pScore1"   x="520" y="20" width="50"  height="22" maximum="3"/>

  <!-- Player 2 -->
  <lineEdit id="pTeam2"    x="40"  y="50" width="100" height="20" dataSet="players.csv"/>
  <lineEdit id="pName2"    x="150" y="50" width="140" height="20" dataSet="players.csv"/>
  <lineEdit id="pTwitter2" x="300" y="50" width="100" height="20" dataSet="players.csv" dataField="2" master="pName2"/>
  <lineEdit id="pCountry2" x="420" y="50" width="80"  height="20" dataSet="players.csv" dataField="3" master="pName2"/>
  <spinBox  id="pScore2"   x="520" y="50" width="50"  height="22" maximum="3"/>

  <!-- Buttons -->
  <button type="reset" x="40"  y="80" width="70" height="23" tooltip="Clear Player 1 fields" id="clear1" reset="pTeam1,pName1,pTwitter1,pScore1,pCountry1">Clear P1</button>
  <button type="reset" x="120" y="80" width="70" height="23" tooltip="Clear Player 2 fields" id="clear2" reset="pTeam2,pName2,pTwitter2,pScore2,pCountry2">Clear P2</button>
  <button type="reset" x="200" y="80" width="70" height="23" tooltip="Reset the Scores" id="reset" reset="pScore1,pScore2">Reset</button>
  <button type="swap"  x="280" y="80" width="80" height="23" tooltip="Swap the Scores" id="swap"
          swapSet1="pTeam1,pName1,pTwitter1,pScore1,pCountry1"
          swapSet2="pTeam2,pName2,pTwitter2,pScore2,pCountry2">Swap</button>

  <!-- Stage -->
  <label x="40" y="116" width="60" height="13">Stage</label>
  <lineEdit id="stage" x="40" y="130" width="500" height="20"/>

  <!-- Sponsors -->
  <button type="timestamp" x="40" y="160" width="500" height="23" tooltip="Show Sponsors" id="sponsorts" saveonclick="1">Sponsors</button>
 </tab>

 <tab name="l3rds">
  <tabSet x="0" y="0" width="600" height="300">
   <tab name="l3rd1">
    <label x="10" y="14" width="60" height="13">Line 1</label>
    <label x="10" y="34" width="60" height="13">Line 2</label>
    <lineEdit id="l3rd1a" x="80" y="10" width="480" height="20" dataSet="l3rds.csv"/>
    <lineEdit id="l3rd1b" x="80" y="30" width="480" height="20" dataSet="l3rds.csv" dataField="2" master="l3rd1a"/>
   </tab>
   <tab name="l3rd2">
    <label x="10" y="14" width="60" height="13">Line 1</label>
    <label x="10" y="34" width="60" height="13">Line 2</label>
    <lineEdit id="l3rd2a" x="80" y="10" width="480" height="20" dataSet="l3rds.csv"/>
    <lineEdit id="l3rd2b" x="80" y="30" width="480" height="20" dataSet="l3rds.csv" dataField="2" master="l3rd2a"/>
   </tab>
  </tabSet>
 </tab>
</layout>
